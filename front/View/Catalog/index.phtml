    });
	function search(){
		var name    = $("#name").val();
		var address = $("#address").val();
		var sort    = $("#sort").val();
		$.ajax({
            url: "<?php echo $this->getBaseURL()."/catalog/search"; ?>",
            type: 'get',
			data : {"name": name, 'address': address, "sort": sort},
			success:
			    function(data){
					$("#result").html(data);
                }
        });
	}
});
</script>
