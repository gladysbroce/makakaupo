<section class="bgwhite p-t-66 p-b-60">
	<div class="container register" style="max-width:500px">
		<div class="row">
			<div class="col-md-12 p-b-30">
				<form id="register">
					<h4 class="m-text26 p-b-36 p-t-15">
						Create an Account
					</h4>
					<div class="t-center">
					    <span class="m-text10" id="msg"></span>
				    </div>
					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="username" placeholder="Username">
					</div>
					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="password" name="password1" placeholder="Password" minlength="8" maxlength="100">
					</div>
					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="password" name="password2" placeholder="Confirm Password" minlength="8" maxlength="100">
					</div>
					<div class="bo4 of-hidden size15 m-b-20">
						<input class="sizefull s-text7 p-l-22 p-r-22" type="email" name="email" placeholder="Email Address">
					</div>
					<div class="w-size25">
						<button class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4">Register</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
<script type="text/javascript">
    $(document).ready(function () {
		/* Register */
		$("#register").submit(function(e){
		    e.preventDefault();
            var form = $(this);
		    $.ajax({
		    	url: "<?php echo $this->getControllerURL('user', 'add'); ?>",
                type: 'POST',
		    	data: form.serialize(),
		    	success:
		    	    function(result){
						switch(result){
						    case "0":
							    $("#msg").html(
							    	"Thank you for registering to our website.<br />An email verification has been sent to your account.");
								break;
							case "1":
							    $("#msg").html("Please enter all required fields.");
								break;
							case "2":
							    $("#msg").html("Username has already been taken.");
								break;
							case "3":
							    $("#msg").html("Your password and confirmation password do not match.");
								break;
							case "4":
							    $("#msg").html("An error occured during registration.");
								break;
							case "5":
							    $("#msg").html("An error occured while sending the email.");
								break;
						    
							default: break;
							
						}
                    }
            });
        });
    });
</script>