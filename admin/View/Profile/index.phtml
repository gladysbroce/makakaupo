<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon"><i class="pe-7s-car icon-gradient bg-mean-fruit"></i></div>
            <div>Restaurant Profile
                <div class="page-title-subheading">Tell us about your restaurant.</div>
            </div>
        </div>
	</div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body"><h5 class="card-title">Restaurant Information</h5>
        <form class="">
		    <div class="form-row">
		        <div class="col-md-7 mb-2">
                    <label for="name" class="">Restaurant Name</label>
                    <input id="name" type="text" class="mb-2 form-control">
                </div>
		        <div class="col-md-5 mb-2">
			        <label for="branch" class="">Branch Name</label>
		            <input id="branch" type="text" class="mb-2 form-control">
                </div>
			</div>
			<div class="position-relative form-group">
			    <label for="description" class="">Description</label>
		        <textarea id="description" class="form-control"></textarea>
			</div>
			<div class="position-relative form-group">
			    <label for="hours" class="">Business Hours</label>
		        <input id="hours" type="text" class="mb-2 form-control">
			</div>
			<div class="position-relative form-group">
			    <label for="address" class="">Address</label>
		        <input id="address" type="text" class="mb-2 form-control">
			</div>
			<div class="position-relative form-group">
			    <label for="website" class="">Website</label>
		        <input id="website" type="text" class="mb-2 form-control">
			</div>
			<div class="position-relative form-group">
			    <label for="phoneno" class="">Phone Number</label>
		        <input id="phoneno" type="text" class="mb-2 form-control">
			</div>
            <button class="mt-1 btn btn-primary">Submit</button>
        </form>
    </div>
</div>